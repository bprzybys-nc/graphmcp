{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github@2025.4.8"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_PERSONAL_ACCESS_TOKEN"
      }
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "$SLACK_BOT_TOKEN"
      }
    },
    "repomix": {
      "command": "npx",
      "args": ["-y", "repomix@1.1.0", "--mcp"],
      "env": {
        "MCP_LOG_LEVEL": "debug",
        "DEBUG": "mcp:*,repomix:*"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem@2025.7.1", "/tmp"],
      "env": {
        "MCP_LOG_LEVEL": "debug",
        "DEBUG": "mcp:*,filesystem:*"
      }
    },
    "browser": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "env": {
        "MCP_LOG_LEVEL": "debug"
      }
    }
  }
} 