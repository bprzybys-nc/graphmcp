{
  "codebase": {
    "include": [
      "__init__.py",
      "clients/**/*.py",
      "composite/**/*.py",
      "utils/**/*.py"
    ],
    "exclude": [
      "**/__pycache__/**"
    ]
  },
  "tests": {
    "include": [
      "tests/**/*.py"
    ]
  },
  "config": {
    "include": [
      "pyproject.toml"
    ]
  },
  "docs": {
    "include": [
      "README.md",
      "USAGE_GUIDE.md",
      "QUICK_REFERENCE.md"
    ]
  },
  "exclude": [
    ".git",
    ".gitignore",
    ".gitmodules",
    "__pycache__",
    "*.pyc",
    "*.pyd",
    "*.pyo",
    "build/",
    "dist/",
    "*.egg-info/",
    ".DS_Store",
    ".idea/",
    ".vscode/",
    "*.log",
    "ovora_mcp_config.json"
  ]
} 